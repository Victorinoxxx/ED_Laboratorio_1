#include "Display7Seg.h"

// Número de Display cátodo
const uint8_t numero[] = {
	0b11000000, // 0
	0b11111001, // 1
	0b10100100, // 2
	0b10110000, // 3
	0b10011001, // 4
	0b10010010, // 5
};

// Configurar el puerto D como salida y una entrada
void dis_init() {
	DDRD = 0b01111111;
}

// Mostrar número en display
void dis_num(uint8_t num) {
	PORTD = numero[num];
}